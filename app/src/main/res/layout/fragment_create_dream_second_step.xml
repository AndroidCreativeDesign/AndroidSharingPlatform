<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始日期" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击选择" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击选择" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束日期" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击选择" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击选择" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="招募人数" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动人数" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赞助总额" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>