<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Actionbar 颜色  Toolbar设置的是Actionbar的颜色 -->
        <!--  <item name="colorPrimary">#66cc99</item>-->
        <!-- 状态栏颜色 -->
        <!--
                <item name="colorPrimaryDark">#66cc99</item>
        -->
        <!-- 箭头样式风格 -->


        <!--
               <item name="colorPrimary">#2196F3</item>
               <item name="colorPrimaryDark">#1565C0</item>
               <item name="colorAccent">#FF3D00</item>
               <item name="drawerArrowStyle">@style/AppTheme.MyDrawerArrowStyle</item>
               <item name="colorControlNormal">@android:color/white</item>
               <item name="android:textColorPrimary">@android:color/white</item>-->
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/AppTheme.MyDrawerArrowStyle</item>
        <!--      <item name="colorControlNormal">@android:color/white</item>-->
        <!--
                <item name="android:textColorPrimary">@android:color/white</item>
        -->
        <!--<item name="alertDialogStyle">@style/MyAlertDialogStyle</item>-->
    </style>

    <style name="MyAlertDialogStyle" parent="AlertDialog.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>


    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <!--    <item name="android:textColorPrimary">#FFFFFF</item>
            <item name="android:background">#5fa3d0</item>-->
    </style>


    <style name="MyToolbarStyle">
        <!--    <item name="android:minHeight">?actionBarSize</item>
            <item name="android:background">?colorPrimary</item>-->
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/MyToolbarTheme</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Used to tint the back arrow, menu and spinner arrow -->
        <item name="colorControlNormal">#FFF</item>
        <!--<item name="android:textColorPrimary">#FFF</item>-->

    </style>


    <style name="AppTheme.MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!-- 是否为旋转动画效果 默认是true  false的话，为另外一种动画效果 -->
        <item name="spinBars">true</item>
        <!-- icon颜色 -->
        <item name="color">#FFFFFF</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>


    <style name="App.TextAppearance.Item" parent="" />

    <style name="App.TextAppearance.Item.PrimaryText">
        <item name="android:textSize">@dimen/item_primary_text_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="App.TextAppearance.Item.SecondaryText">
        <item name="android:textSize">@dimen/item_secondary_text_size</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="App.Button" parent="" />

    <style name="App.EditText" parent="">
        <item name="android:paddingLeft">@dimen/edit_text_padding_left</item>
        <item name="android:paddingRight">@dimen/edit_text_padding_right</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>
