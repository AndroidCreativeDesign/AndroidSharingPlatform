<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_association_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/app_icon" />


        <TextView
            android:id="@+id/text_association_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_association_logo"
            android:padding="8dp"
            android:text="协会名称"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_association_name"
            android:layout_below="@id/text_association_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/img_association_logo"
            android:text="查看成员" />

        <Button
            android:id="@+id/btn_recent_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_association_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/btn_member"
            android:text="近期活动" />


    </RelativeLayout>
</android.support.v7.widget.CardView>